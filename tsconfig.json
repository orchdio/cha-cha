{
    "compilerOptions": {
        "outDir": "dist",
        "module": "commonJS",
        "esModuleInterop": true,
        "target": "ES2022",
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "baseUrl": "src/",
        "allowJs": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", ".eslintrc.js"]
}